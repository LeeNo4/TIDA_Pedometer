<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobileapp.hhx.pedometer.LoginActivity">

    <RelativeLayout
        android:id="@+id/tmpLayoutID1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tmpViewID1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="用户名"
            android:textColor="#000000"
            android:textSize="30sp"
            />

        <EditText
            android:id="@+id/edtUsername"
            android:layout_toRightOf="@id/tmpViewID1"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tmpLayoutID2"
        android:layout_below="@id/tmpLayoutID1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tmpViewID2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="密码"
            android:textColor="#000000"
            android:textSize="30sp"
            />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_toRightOf="@id/tmpViewID2"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tmpLayoutID3"
        android:layout_below="@id/tmpLayoutID2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/loginCkbx"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="自动登录"
            android:textSize="20sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_below="@id/tmpLayoutID3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Login"
        android:textSize="20sp"/>
</RelativeLayout>
