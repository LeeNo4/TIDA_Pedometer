<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/svmbackgroud"
    tools:context="com.mobileapp.hhx.pedometer.HelpActivity"
    android:orientation="vertical">
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="  返回"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/returnSvm"/>
    <TextView
        android:layout_gravity="center"
        android:text="关于"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:text="     本功能为检测持有者的行动模式和检测设备所处位置，是测试性功能，旨在学习机器学习svm算法，并且为可能会用到的功能进行测试。"
        />
    <TextView
        android:layout_gravity="center"
        android:text="使用帮助"
        android:textSize="50sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:text="      使用者先选定即将所处的状态（分别是位置和动作），点击开始收集，可见已经收集样本个数，手机完成后点击完成收集，之后点击训练。待训练完成后，点击开始识别，既可以进行步态分析。"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="最终解释权归开发者所有"
            />
    </RelativeLayout>

</LinearLayout>
